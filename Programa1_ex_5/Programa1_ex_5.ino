//****** Includes ********************************************************


//****** Variables *******************************************************
int led [] = {5,6,7,8};
int i = 0;  
int buttonPin [] = {2};
byte num = 0;
boolean buttonEstat [] = {LOW}

//****** secup ***********************************************************
void setup() { 
 for (i = 0; i < 4; i++)
{
 pinMode (led [i], OUTPUT);
  }
 for (i = 0; i < 1; i++)
{
 pinMode (buttonPin [i], INPUT);
  }
}

//****** Loop ************************************************************
void loop() {
 buttonEstat [0] = digitalRead(buttonPin [0]);
 num = num + 1;
 for (i = 0; i < 4; i++)
{
 digitalWrite(led [i], bitRead(num, i));
  }
 delay(1000);
}

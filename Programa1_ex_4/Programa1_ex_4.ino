//****** Variables *******************************************************
int led [] = {5,6,7,8};
int i = 0;  
byte num = 0;

//****** secup ***********************************************************
void setup() { 
 for (i = 0; i < 4; i++)
 {
  pinMode (led[i], OUTPUT);//AixÃ­ es confguren els leds de sortida 
 }
}

//****** Loop ************************************************************
void loop() {
 num = num + 1;
 for (i = 0; i < 4; i++)
 {
  digitalWrite(led[i], bitRead(num, i));
 }
 delay(1000);
}
